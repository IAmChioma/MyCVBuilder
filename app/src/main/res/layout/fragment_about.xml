<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="20dp"
                app:cardCornerRadius="12dp">


                <LinearLayout
                    android:id="@+id/about_note"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/about_me_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/about_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About Me"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/intro"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Skilled Software Developer with 5 years of hands-on experience leading design and implementation of software
solutions that automate processes and enhance overall business operations. Proven expertise in contributing to
all phases of development life cycle for frontend and backend components using Java, Python, HTML5, CSS3,
Django, Angular, MySQL."
                            android:textSize="14sp"
                             />




                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="20dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textSize="20sp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My College"
                        android:textSize="14sp"
                        />
                <LinearLayout
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/school_detail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.7"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/school_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/miu"
                            android:contentDescription="School Logo"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/education_details"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2.3"
                        android:padding="12dp">


                        <TextView
                            android:id="@+id/school_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maharishi International university"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/degree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Master's in Computer Science"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/education1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/school_detail1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="0.7"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/school_logo1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/cu"
                                android:contentDescription="School Logo"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/school_details1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2.3"
                            android:padding="12dp">


                            <TextView
                                android:id="@+id/school_name1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Covenant University"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/degree1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bachelor's in Computer Science"
                                android:textSize="14sp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_certification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="20dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Certification"
                        android:textSize="20sp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        />
                    <LinearLayout
                        android:id="@+id/certification"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/certification_layout_logo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="0.7"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/certification_logo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bcs"
                                android:contentDescription="School Logo"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/certification_details"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2.3"
                            android:padding="12dp">


                            <TextView
                                android:id="@+id/certification_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="BCS The Chartered Institute for IT"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textSize="14sp" />



                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>